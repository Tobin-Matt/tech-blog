<div>
    <div>
        <h2>
            {{post.title}}
        </h2>
        <div>
            Posted By {{post.user.username}} on {{post.date_created}}
        </div>
    </div>
    <div>
        {{post.content}}
    </div>

    {{#if post.comment}}
        <div>
            <div>
                <h3>Comments</h3>
            </div>

            {{#each post.comment}}
                <div>
                    <p>
                        {{body}}
                    </p>
                    <p>
                        &ndash; {{user.username}}, {{date_created}}
                    </p>
                </div>
            {{/each}}
        </div>
    {{/if}}

    <div class="m-3">
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <label for="comment-text" class="form-label">Example textarea</label>
        <textarea class="form-control" id="comment-text" rows="3"></textarea>
        <div class="d-grid gap-2 col-6 mx-auto">
            <button class="btn btn-primary" type="button">Submit</button>
        </div>
    </div>
</div>